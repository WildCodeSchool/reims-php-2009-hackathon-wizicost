{% extends 'base.html.twig' %}

{% block title %}Accueil{{parent()}}{% endblock %}

{% block body %}
    <section class="container">
        <div class="top-bar">
        </div>
        <div class="center-block">
            <img class="home-logo" src="{{ asset('/build/images/wizicost-logo.png') }}" alt="Logo WiziCost"/>
            <div class="brand-name">
                <div class="wizi">Wizi</div>
                <div class="cost">Cost</div>
            </div>
            <div class="block-button">
                {# <a href="/app/registrer"><div>S'inscrire</div></a>
                <a href="/app/login"><div>Se connecter</div></a> #}
                {% if app.user %}
                    <div class="containerAuthButtons">
                        <button class="submitConnexion" type="submit"><a href="{{ path('user_index') }}">Entrer</a></button>
                        <a class="loggedPageLogoutButton" href="{{ path('app_logout') }}">Déconnexion</a>
                    </div>
                {% else %}
                    <div class="containerAuthButtons">
                        <button class="submitConnexion" type="submit"><a href="{{ path('app_login') }}">S'identifier</a></button>
                        <a class="subscriptionText" href="{{ path('app_register') }}">Pas encore inscrit ? Créez un compte !</a>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="bottom-bar">
        </div>
    <section>
{% endblock %}
