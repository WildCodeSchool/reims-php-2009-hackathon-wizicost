        <div class="top-bar">
            <div class="top-brand-name">
                <div class="wizi-white">Wizi</div>
                <div class="cost-white">Cost</div>
            </div>
        </div>
        <div class="center-block-categories">
            <div class="categories-container">
                {% for category in categories %}
                    <a href = "{{ path('resource_new_machine_type', {'resource' : resource.id, 'category' : category.id}) }}">
